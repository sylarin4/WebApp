@model AdventureGameEditor.Models.ViewModels.Gameplay.DirectionButtonsViewModel

@if (!Model.GameWon && !Model.GameLost)
{
    <div class="direction-buttons">

        @if (Model.WillTeleport)
        {
            <div class="result-button">
                <button type="button" onclick="Teleport('@Model.GameTitle', '@Model.RowNumber', '@Model.ColNumber')">Teleportáció</button>
            </div>

        }
        else
        {
            <table>
                <tr>
                    <td></td>
                    <td>
                        <div class="up-button">
                            @if (!Model.IsUpWay)
                            {
                                <button class="direction-button hidden-button " onclick="Step('@Model.GameTitle', '@Model.RowNumber', '@Model.ColNumber', 'Up' )" disabled="disabled"></button>
                            }
                            else
                            {
                                <button class="direction-button " onclick="Step('@Model.GameTitle', '@Model.RowNumber', '@Model.ColNumber', 'Up' )"></button>
                            }
                        </div>

                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        <div class="left-button">
                            @if (!Model.IsLeftWay)
                            {
                                <button class="direction-button hidden-button" onclick="Step('@Model.GameTitle', '@Model.RowNumber', '@Model.ColNumber', 'Left' )" disabled="disabled"></button>
                            }
                            else
                            {
                                <button class="direction-button" onclick="Step('@Model.GameTitle', '@Model.RowNumber', '@Model.ColNumber', 'Left' )"></button>
                            }
                        </div>

                    </td>
                    <td></td>
                    <td>
                        <div class="right-button">
                            @if (!Model.IsRightWay)
                            {
                                <button class="direction-button hidden-button" onclick="Step('@Model.GameTitle', '@Model.RowNumber', '@Model.ColNumber', 'Right' )" disabled="disabled"></button>
                            }
                            else
                            {
                                <button class="direction-button" onclick="Step('@Model.GameTitle', '@Model.RowNumber', '@Model.ColNumber', 'Right' )"></button>
                            }
                        </div>

                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <div class="down-button">
                            @if (!Model.IsDownWay)
                            {
                                <button class="direction-button hidden-button" onclick="Step('@Model.GameTitle', '@Model.RowNumber', '@Model.ColNumber', 'Down' )" disabled="disabled"></button>
                            }
                            else
                            {
                                <button class="direction-button" onclick="Step('@Model.GameTitle', '@Model.RowNumber', '@Model.ColNumber', 'Down' )"></button>
                            }
                        </div>

                    </td>
                    <td></td>
                </tr>
            </table>

        }

    </div>
}
else
{
    <div class="game-result-link">
        <p>Játék vége!</p>
        <a asp-controller="Gameplay" asp-action="GetGameResult" asp-route-gameTitle="@Model.GameTitle">Tovább</a>
    </div>
}