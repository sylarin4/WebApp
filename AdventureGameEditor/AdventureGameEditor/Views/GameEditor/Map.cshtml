@model AdventureGameEditor.Models.MapViewModel
@{
    ViewData["Title"] = "Map";
}


<table border="1" frame="box" rules="all">
    @foreach (MapRow row in Model.Map)
    {
        <tr>
            @foreach (Field field in row.Row)
            {
                <td style="height:100px;width:100px" >
                    <button type="button"  onclick="RefreshMapPiece('@Model.GameTitle', '@field.HorizontalCord', '@field.VerticalCord');">
                        <div id="@field.HorizontalCord@field.VerticalCord">
                            @{
                                await Html.RenderPartialAsync("MapPiecePartialView",
                                new MapPieceViewModel
                                {
                                    GameTitle = Model.GameTitle,
                                    Field = field
                                });
                            }
                         </div>
                    </button>
                </td>
            }
        </tr>
    }
</table>

<script type="text/javascript" src="CDN or local jquery file"></script>





