@model AdventureGameEditor.Models.FieldTrialContentViewModel

<p>Write the text of the field.</p>
<p> Sor: @Model.RowNumber</p>
<p> Oszlop: @Model.ColNumber</p>



<form asp-action="SetTrialForField">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <input type="hidden" asp-for="GameTitle" class="form-control" value="@Model.GameTitle" />
    </div>

    <div class="form-group">
        <input type="hidden" asp-for="ColNumber" class="form-control" value="@Model.ColNumber" />
    </div>

    <div class="form-group">
        <input type="hidden" asp-for="RowNumber" class="form-control" value="@Model.RowNumber" />
    </div>

    <div class="form-group">
        <label asp-for="TrialType" class="control-label"></label>
        <p>
            <select asp-for="TrialType" asp-items="Html.GetEnumSelectList<TrialType>()"></select>
        </p>
        <span asp-validation-for="TrialType" class="text-danger"></span>
    </div>

    <h2>A próba kimenetelének alternatívái:</h2>
  
    @for (int i = 0; i < Model.AlternativeTexts.Count; ++i)
    {
        String id = "alternative" + @i;
        <div id="@id">
            <h4> @i . alternatíva</h4>
            <div class="form-group">
                <label asp-for="AlternativeTexts[i]" class="control-label"></label>
                <textarea asp-for="AlternativeTexts[i]" class="form-control">@Model.AlternativeTexts[i]</textarea>
                <span asp-validation-for="AlternativeTexts[i]" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrialResults[i].ResultType" class="control-label"></label>
                <p>
                    <select asp-for="TrialResults[i].ResultType" asp-items="Html.GetEnumSelectList<ResultType>()"></select>
                </p>
                <span asp-validation-for="TrialResults[i].ResultType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrialResults[i].Text" class="control-label"></label>
                <textarea asp-for="TrialResults[i].Text" class="form-control">@Model.TrialResults[i].Text</textarea>
                <span asp-validation-for="TrialResults[i].Text" class="text-danger"></span>
            </div>
        </div>
    }

    <div class="form-group">
        <input type="submit" value="Mentés" class="btn btn-default" />
    </div>
</form>
