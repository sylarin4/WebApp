@model AdventureGameEditor.Models.BasicGameDataViewModel

@{
    ViewData["Title"] = "Játék létrehozása";
}

<div class="single-page create-game">
    <h2> Játék létrehozása</h2>

            <form enctype="multipart/form-data" asp-action="CreateGame">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div >
                    <label asp-for="Visibility" class="control-label"></label>
                    <p>
                        <select asp-for="Visibility" asp-items="Html.GetEnumSelectList<Visibility>()"></select>
                    </p>
                    <span asp-validation-for="Visibility" class="text-danger"></span>
                </div>

                <div >
                    <label asp-for="TableSize" class="control-label"></label>
                    <input asp-for="TableSize" class="form-control" />
                    <span asp-validation-for="TableSize" class="text-danger"></span>
                </div>

                <div >
                    <label asp-for="CoverImage" class="control-label"></label>
                    <input asp-for="CoverImage" type="file" class="form-control" accept="*.bmp, *.jpg, *.jpeg" value="Kép választása">
                    <span asp-validation-for="CoverImage" class="text-danger"></span>
                </div>

                <div >
                    <input type="submit" value="Játék létrehozása" class="btn btn-default" />
                </div>
            </form>
</div>


@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    
}
