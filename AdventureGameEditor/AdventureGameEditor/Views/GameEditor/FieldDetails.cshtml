@model AdventureGameEditor.Models.FieldDetailsViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
        <h4>A kiválasztott mező adatai</h4>
        <hr />
        <dl class="row">

            @*Field informations.*@

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ColNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ColNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RowNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RowNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TextContent)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TextContent)
            </dd>

            @*Trial informations.*@

            @if (Model.IsTrial)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TrialType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TrialType)
                </dd>

                @for (int i = 0; i < Model.AlternativeTexts.Count; ++i)
                {

                    <dt class="col-sm-2">
                        @i. @Html.DisplayNameFor(model => model.AlternativeTexts)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.AlternativeTexts[i])
                    </dd>             
                    <dt class="col-sm-2">
                        @i. alternatíva szövege
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TrialResults[i].Text)
                    </dd>
                    <dt class="col-sm-2">
                        @i. alternatíva típusa
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TrialResults[i].ResultType)
                    </dd>
                }

            }

        </dl>