@model AdventureGameEditor.Models.FieldDetailsViewModel

        <h4>A kiválasztott mező adatai</h4>
        <hr />
        <dl class="row">

            @*Field informations.*@

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ColNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ColNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RowNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RowNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TextContent)
            </dt>
            <dd class="col-sm-10">
                @if (Model.TextContent.Length <= 0 || Model.TextContent == null)
                {
                    <p>A mező nem rendelkezik szöveggel.</p>
                }
                @Html.DisplayFor(model => model.TextContent)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PictureID)
            </dt>
            <dd class="col-sm-10">
                @if (Model.PictureID == -1 )
                {
                    <p>A mező nem rendelkezik képpel.</p>
                }
                <img src="@Url.Action("RenderFieldImage", new { imageID = Model.PictureID })" class="contentImage" height=100 />
            </dd>

            @*Trial informations.*@

            @if (!Model.IsTrial)
            {
                <dt class="col-sm-2">
                    @*@Html.DisplayNameFor(model => model.TrialType) *@
                </dt>
                <dd class="col-sm-10">
                    Nincs próba.
                </dd>
            }
            else
            {
                @* Now only one type of trial available.*@
                @*
                <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TrialType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TrialType)
            </dd>
                *@

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TrialText)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TrialText)
                </dd>

                @for (int i = 0; i < Model.AlternativeTexts.Count; ++i)
                {

                    <dt class="col-sm-2">
                        @i. @Html.DisplayNameFor(model => model.AlternativeTexts)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.AlternativeTexts[i])
                    </dd>

                    <dt class="col-sm-2">
                        @i. alternatíva szövege
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TrialResults[i].Text)
                    </dd>
                    <dt class="col-sm-2">
                        @i. alternatíva típusa
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TrialResults[i].ResultType)
                    </dd>
                }

            }
        </dl>
